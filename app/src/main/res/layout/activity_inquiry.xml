<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/myinfo_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/skyblue"
        android:fontFamily="@font/tenten"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:paddingTop="25dp"
        android:paddingStart="160dp"
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="예약조회"
        android:fontFamily="@font/tenten"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/gym_info"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="170dp"
        android:paddingTop="15dp"
        android:fontFamily="@font/tenten"
        android:background="#EBE6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myinfo_top"/>

    <TextView
        android:id="@+id/reservationNumber"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:fontFamily="@font/tenten"
        android:background="#EBE6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gym_info"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:fontFamily="@font/tenten"
        android:background="#EBE6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservationNumber"/>

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:fontFamily="@font/tenten"
        android:background="#EBE6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"/>

    <TextView
        android:id="@+id/BookStatus"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:fontFamily="@font/tenten"
        android:background="#EBE6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTime"/>

    <Button
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:text="예약취소"
        android:textColor="@color/white"
        android:background="@color/red"
        app:layout_constraintTop_toBottomOf="@id/BookStatus"
        app:layout_constraintEnd_toEndOf="@id/BookStatus"/>

</androidx.constraintlayout.widget.ConstraintLayout>